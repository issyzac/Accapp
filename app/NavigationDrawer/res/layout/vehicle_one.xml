            android:textSize="16sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner_physical_address"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
