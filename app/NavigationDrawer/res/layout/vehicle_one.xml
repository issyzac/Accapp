            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/type"
            android:text="Vehicle Type : "
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_below="@id/strip_two"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/type_one"
            android:background="@null"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"
            android:layout_toRightOf="@id/type"
            android:layout_below="@id/strip_two"
            android:hint="............"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registration_number"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="Registration Number : "
            android:layout_below="@id/type_one"
            android:textSize="16sp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/registration_number_one"
            android:layout_marginLeft="16dp"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/registration_number"
            android:layout_below="@id/type_one"
            android:background="@null"
            android:hint=".............."/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owners_names"
            android:textSize="16sp"
            android:text="Owner's Full Name : "
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_below="@id/registration_number_one"
