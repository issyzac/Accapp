            android:layout_below="@id/owner_nationality_one"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner_physical_address_one"
            android:background="@null"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/owner_physical_address"
            android:hint="................"
            android:textSize="16sp"
            android:layout_below="@id/owner_nationality_one"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/owner_address"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text="Address : "
            android:layout_below="@id/owner_physical_address_one"
            />

        <EditText
            android:layout_width="wrap_content"
