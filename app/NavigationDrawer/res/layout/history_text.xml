<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:id="@+id/hist"
        android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/date_issued"
                android:text="21/8/2013"
                android:typeface="serif"
                android:textColor="@color/card_grid_text"
                android:textSize="18sp"
                android:layout_marginLeft="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/offense_type"
            android:textSize="18sp"
            android:typeface="serif"
            android:textColor="@color/card_grid_text"
            android:text="Wrong Parking"
            android:layout_toRightOf="@id/date_issued"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="8dp"/>


        </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/card_border"
        android:layout_below="@id/hist"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"/>

</RelativeLayout>