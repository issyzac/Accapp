<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText"
    android:padding="5sp"
    android:background="#000">


    <!-- Header  Starts -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_050">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_400"
            android:layout_marginTop="10sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:paddingBottom="5dip"
            android:paddingTop="5dip" >



            <TextView
                android:id="@+id/headerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="CHANGING PASSWORD"
                android:textSize="15sp"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/header"
            android:text="Old Password:"
            android:textColor="#000000"
            android:textSize="15sp"
            android:gravity="center"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/Oldpass"
            android:paddingLeft="5sp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/edit_drawable"
            android:hint="Old password:"
            android:textColor="#000"
            android:layout_below="@+id/textView3"
            android:password="true"/>
        <TextView
            android:id="@+id/textView2"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/Oldpass"
            android:text="New Password:"
            android:textColor="#000000"
            android:textSize="15sp"
            android:gravity="center"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/newpass1"
            android:paddingLeft="5sp"
            android:background="@drawable/edit_drawable"
            android:hint="New Password:"
            android:textColor="#000"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/textView2"
            android:password="true"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/newpass"
            android:layout_marginTop="12dp"
            android:paddingLeft="5sp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/edit_drawable"
            android:hint="Re-type New Password:"
            android:textColor="#000"
            android:layout_below="@+id/newpass1"
            android:password="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:id="@+id/alertpass"
            android:textColor="#000000"
            android:layout_below="@+id/btchangepass"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>

        <Button
            android:id="@+id/btcancel"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_below="@+id/newpass"
            android:layout_marginTop="42dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/button"
            android:text="Cancel"
            android:layout_marginRight="5dp"
            android:textColor="@color/blue_400"
            android:textSize="13sp" />

        <Button
            android:id="@+id/btchangepass"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignLeft="@+id/alertpass"
            android:layout_below="@+id/newpass"
            android:layout_marginTop="42dp"
            android:background="@drawable/button"
            android:text="Change Password"
            android:textColor="@color/blue_400"
            android:textSize="13sp"
            android:layout_marginLeft="5dp"/>
    </RelativeLayout>
</RelativeLayout>