<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_white">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/top"
        android:background="@color/green_500">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:gravity="center"
            android:text="ACCIDENT REPORTING APPLICATION"
            android:textColor="@color/card_white"
            android:textStyle="bold"/>



        </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/top"
        android:id="@+id/mid"
        android:background="@color/card_white">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/card"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="32dp"
            android:src="@drawable/slr_camera"
            android:scaleType="centerCrop"
            android:id="@+id/prof_pic"/>

        <RelativeLayout
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_below="@id/prof_pic"
            android:id="@+id/cameraOptions"
            android:background="@color/card_white">
            <!-- Capture picture button -->

            <Button
                android:id="@+id/btnCapturePicture"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:text="Photo"/>


            <!-- Record video button -->
            <Button
                android:id="@+id/btnCaptureVideo"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:scaleType="centerCrop"
                android:text="Video"/>


        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="32dp"
            android:text="Name : "
            android:id="@+id/name_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="32dp"
            android:layout_toRightOf="@id/name_title"
            android:text="Mwita Marwa"
            android:textColor="@color/card_grid_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/station_title"
            android:text="Station : "
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/name_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/station"
            android:layout_below="@id/name_title"
            android:layout_toRightOf="@id/station_title"
            android:text="Kinondoni"
            android:layout_marginTop="8dp"
            android:textColor="@color/card_grid_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rank_title"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_below="@id/station_title"
            android:text="Rank No : "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rank"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/rank_title"
            android:textColor="@color/card_grid_text"
            android:text="1248B"
            android:layout_below="@id/station_title"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location_title"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@id/rank_title"
            android:text="Location : "/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/location"
            android:layout_toRightOf="@id/location_title"
            android:layout_below="@id/rank_title"
            android:textColor="@color/card_grid_text"
            android:text="Rose Garden Rd"
            android:layout_marginTop="8dp"/>

        </RelativeLayout>


    <RelativeLayout
        android:id="@+id/preview"
        android:layout_below="@+id/mid"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/strip"
            android:layout_marginRight="8dp"
            android:background="@color/green_200"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/preview_text"
            android:text="Preview"
            android:padding="10dp"
            android:textSize="15dp"
            android:textStyle="bold"/>

 <RelativeLayout
    android:layout_width="350sp"
    android:layout_height="180sp"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/preview_text"
     android:layout_alignRight="@+id/preview_text">

        <!-- To display picture taken -->
        <ImageView
            android:id="@+id/imgPreview"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:scaleType="centerCrop"
            android:visibility="gone" />


     <!-- To preview video recorded -->
     <VideoView
         android:id="@+id/videoPreview"
         android:layout_width="300dp"
         android:layout_height="150dp"
         android:layout_marginRight="8dp"
         android:layout_marginLeft="8dp"
         android:visibility="gone"
         android:scaleType="centerCrop" />


</RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/reported_accidents_layout"
        android:layout_below="@id/preview">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/strip1"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/green_200"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/report_title"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:textColor="@color/green_500"
            android:text="Accident Notification"
            android:textStyle="bold"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/report_strip"
            android:layout_below="@id/report_title"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/green_200"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/card_grid_text"
            android:text="No Reported Accidents"/>


        </RelativeLayout>


</RelativeLayout>