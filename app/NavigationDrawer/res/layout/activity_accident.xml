<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/wrapper"
        android:layout_height="wrap_content">

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="48dp"
     android:id="@+id/top_header"
     android:background="@color/light_blue_a700">

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerInParent="true"
         android:text="Vehicle and Driver"
         android:textSize="30sp"
         android:textStyle="bold"
         android:textColor="@android:color/white"/>

     </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/top_header"
        android:layout_margin="8dp"
        android:id="@+id/summary"
        android:padding="8dp"
        android:background="@drawable/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fatal"
            android:textSize="18sp"
            android:id="@+id/fatal_text"
            android:layout_marginLeft="8dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fatal_edit"
            android:hint="amount"
            android:layout_toRightOf="@id/fatal_text"
            android:textSize="18sp"
            android:background="@null"
            android:layout_marginLeft="8dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/injury_edit"
            android:layout_alignParentRight="true"
            android:layout_marginRight="8dp"
            android:hint="amount"
            android:textSize="18sp"
            android:background="@null"
            android:layout_marginLeft="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/injury_text"
            android:layout_toLeftOf="@id/injury_edit"
            android:text="severe injuries"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="Simple"
            android:id="@+id/simple_text"
            android:layout_below="@id/fatal_edit"
            android:textSize="18sp"
            android:layout_marginTop="4dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/simple_edit"
            android:hint="amount"
            android:layout_below="@id/fatal_edit"
            android:layout_toRightOf="@id/simple_text"
            android:textSize="18sp"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:background="@null"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/injury_edit"
            android:layout_marginTop="4dp"
            android:textSize="18sp"
            android:layout_marginRight="8dp"
            android:background="@null"
            android:hint="amount"
            android:id="@+id/not_injured_edit"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/not_injured_text"
            android:layout_below="@id/injury_edit"
            android:layout_toLeftOf="@id/not_injured_edit"
            android:text="Not injured"
            android:textSize="18sp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/tabs_wrapper"
            android:layout_below="@id/summary">

            <TabWidget
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/vehicle_tab"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/tabcontent"/>


            </RelativeLayout>


    </RelativeLayout>

    <Button
        android:layout_below="@id/wrapper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:background="@drawable/button"
        android:layout_alignParentRight="true"
        android:layout_margin="20dp"
        android:id="@+id/next_button"/>

    </RelativeLayout>